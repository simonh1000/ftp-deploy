{
    "name": "ftp-deploy",
    "version": "2.4.5",
    "author": "Simon Hampton",
    "description": "Ftp a folder from your local disk to an ftp destination",
    "main": "dist/ftp-deploy.js",
    "scripts": {
        "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register '**/*spec.ts'",
        "server": "ts-node test/server.ts",
        "clean": "rm -rf ./dist",
        "build": "npm run clean && npx tsc -p tsconfig.build.json",
        "prepublish": "npm run clean && npm run build"
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "minimatch": "9.0.0",
        "promise-ftp": "^1.3.5",
        "read": "^2.1.0",
        "ssh2-sftp-client": "^7.2.1",
        "upath": "^2.0.1",
        "util": "^0.12.5"
    },
    "devDependencies": {
        "@tsconfig/node12": "^12.1.0",
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.7",
        "@types/promise-ftp": "^1.3.8",
        "@types/read": "^0.0.32",
        "@types/ssh2-sftp-client": "^9.0.3",
        "chai": "^4.3.7",
        "cross-env": "^7.0.3",
        "delete": "^1.1.0",
        "ftp-srv": "^4.6.2",
        "mocha": "^9.1.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "keywords": [
        "ftp",
